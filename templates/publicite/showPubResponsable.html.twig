<script>
    $(document).ready(function () {
        var index = 0;
        var advertisements = $("#advertisement-container .card");
        var totalAdvertisements = advertisements.length;
        var displayTime = 9000; // 9 seconds in milliseconds

        function displayNextAdvertisement() {
            // Hide the current advertisement
            advertisements.eq(index).fadeOut(1000, function () {
                // Move to the next advertisement
                index = (index + 1) % totalAdvertisements;
                var offer = advertisements.eq(index).find('.list-group-item:nth-child(3)').text().trim();
                var delayTime = (offer === "9 mois :130dt") ? displayTime : 0;
                // Display the next advertisement after the delay
                advertisements.eq(index).delay(delayTime).fadeIn(1000);
            });
        }

        // Start displaying the first advertisement
        advertisements.eq(index).fadeIn(1000, function () {
            // Start the interval to switch between advertisements
            setInterval(displayNextAdvertisement, displayTime);
        });
    });
</script>


    

