{% extends 'base-back.html.twig' %}
{% block title %}Liste Des Commentaires{% endblock %}
{% block searchbar %}
<div class="search-bar">
   <form id="search-form" class="search-form d-flex align-items-center" action="{{ path('commentairetache_list') }}" method="GET">
      <input id="search-input" type="text" placeholder="Search..." name="query" value="{{ query ?? '' }}">
      <button type="submit" title="Search"><i class="bi bi-search"></i></button>
   </form>
</div>
{% endblock %}
{% block TacheNavState %}
<a class="nav-link" data-bs-target="#GestionTache-nav" data-bs-toggle="collapse" href="#" aria-expanded="true">
   {% endblock %}
   {% block TacheContentState %}
   <ul id="GestionTache-nav" class="nav-content collapse show" data-bs-parent="#sidebar-nav">
   {% endblock %}
   {% block ListeTacheNav %}
<a href="{{ path('tache_list') }}" class="active"><i class="bi bi-circle"></i><span>Liste Commentaire</span></a>{% endblock %}
{% block body %}
<table class=" table table-hover ">
   <thead>
      <tr class="table-primary">
         <th scope="col">Date</th>
         <th scope="col">Commentaire</th>
         <th scope="col">Actions</th>
      </tr>
   </thead>
   <tbody>
      {% for commentairetache in l %}
      <tr>
         <td>{{ commentairetache.getDateC()|date('d-m-Y') }}</td>
         <td><textarea class="form-control" style="height: 100px" readonly>{{ commentairetache.getTexteC() }}</textarea></td>
         <td>
            <div class="btn-group" role="group" aria-label="Actions">
               <button onclick="location.href='{{ path('commentairetache_update', {'i': commentairetache.getIdC()}) }}'" type="button" class="btn btn-outline-primary"><i class="bi bi-pencil"></i></button>
               <button onclick="location.href='{{ path('commentairetache_delete', {'i': commentairetache.getIdC()}) }}'" type="button" class="btn btn-danger"><i class="bi bi-trash"></i></button>
            </div>
         </td>
      </tr>
      {% endfor %}
   </tbody>
</table>
{% endblock %}