</head>

<body>
<main id="main" class="main">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="pt-4 pb-2">
                            <h5 class="card-title text-center pb-0 fs-4">Create an Account</h5>
                            <p class="text-center small">Enter your personal details to create an account</p>
                        </div>

                        {{ form_start(form, {'attr': {'class': 'row g-3 needs-validation was-validated', 'novalidate': 'novalidate'}}) }}
                        <div class="col-12">
                            <label for="yourName" class="form-label">Name</label>
                            {{ form_widget(form.nom_user, {'attr': {'class': 'form-control', 'id': 'yourName'}}) }}
                            {{ form_errors(form.nom_user) }}
                        </div>
                        <div class="col-12">
                            <label for="yourEmail" class="form-label">Email</label>
                            {{ form_widget(form.email_user, {'attr': {'class': 'form-control', 'id': 'yourEmail'}}) }}
                            {{ form_errors(form.email_user) }}
                        </div>
                        <div class="col-12">
                            <label for="yourPassword" class="form-label">Password</label>
                            {{ form_widget(form.password, {'attr': {'class': 'form-control', 'id': 'yourPassword'}}) }}
                            {{ form_errors(form.password) }}
                        </div>
                        <div class="col-12">
                            <label for="phoneNumber" class="form-label">Phone Number</label>
                            {{ form_widget(form.phoneNumber_user, {'attr': {'class': 'form-control', 'id': 'phoneNumber'}}) }}
                            {{ form_errors(form.phoneNumber_user) }}
                        </div>
                        <div class="col-12">
                            <label for="location" class="form-label">Location</label>
                            {{ form_widget(form.location_user, {'attr': {'class': 'form-control', 'id': 'location'}}) }}
                            {{ form_errors(form.location_user) }}
                        </div>
                        <div class="col-12">
                            <label for="imageURL" class="form-label">Image URL</label>
                            {{ form_widget(form.image_user, {'attr': {'class': 'form-control', 'id': 'imageURL'}}) }}
                            {{ form_errors(form.image_user) }}
                        </div>
                         <div class="col-12">
                            <label for="municipality" class="form-label">Municipality</label>
                            {{ form_widget(form.id_muni, {'attr': {'class': 'form-control', 'id': 'municipality'}}) }}
                            {{ form_errors(form.id_muni) }}
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary w-100">Register</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div> 
            </div>
        </div>
    </div>
</main><!-- End #main -->




<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
            class="bi bi-arrow-up-short"></i></a>

<!-- Vendor JS Files -->
