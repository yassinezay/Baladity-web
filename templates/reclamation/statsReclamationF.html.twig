<section id="get-a-quote" class="get-a-quote">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <canvas id="reclamationByStatusPieChart"></canvas>
            </div>
            <div class="col-md-4">
                <canvas id="reclamationByDateLineChart"></canvas>
            </div>
            <div class="col-md-4">
                <canvas id="reclamationByMonthBarChart"></canvas>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const data = {
        "reclamationStats": {{ reclamationStats|json_encode|raw }},
        "reclamationStatsDate": {{ reclamationStatsDate|json_encode|raw }},
        "reclamationStatsMonth": {{ reclamationStatsMonth|json_encode|raw }},
        "user": {{ user|json_encode|raw }}
    };

    // Réclamations par statut (Pie Chart)
    const reclamationByStatusData = data.reclamationStats;
    const statusLabels = [];
    const statusCounts = [];
    reclamationByStatusData.forEach(item => {
        statusLabels.push(item.status);
        statusCounts.push(item.count);
    });
    const statusCtx = document.getElementById('reclamationByStatusPieChart').getContext('2d');
    new Chart(statusCtx, {
        type: 'pie',
        data: {
            labels: statusLabels,
            datasets: [{
                label: 'Réclamations par statut',
                data: statusCounts,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false
        }
    });

   
    // Réclamations par date (Line Chart)
    const reclamationByDateData = data.reclamationStatsDate;
    const dateLabels = [];
    const dateCounts = [];
    reclamationByDateData.forEach(item => {
        dateLabels.push(item.date);
        dateCounts.push(item.count);
    });
    const dateCtx = document.getElementById('reclamationByDateLineChart').getContext('2d');
    new Chart(dateCtx, {
        type: 'line',
        data: {
            labels: dateLabels,
            datasets: [{
                label: 'Réclamations par date',
                data: dateCounts,
                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                borderColor: 'rgba(255, 99, 132, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false
        }
    });

    // Réclamations par mois (Bar Chart)
    const reclamationByMonthData = data.reclamationStatsMonth;
    const monthLabels = [];
    const monthCounts = [];
    reclamationByMonthData.forEach(item => {
        monthLabels.push(item.month);
        monthCounts.push(item.count);
    });
    const monthCtx = document.getElementById('reclamationByMonthBarChart').getContext('2d');
    new Chart(monthCtx, {
        type: 'bar',
        data: {
            labels: monthLabels,
            datasets: [{
                label: 'Réclamations par mois',
                data: monthCounts,
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
