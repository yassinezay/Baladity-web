<main id="main" class="main">
    <br>
    <h1 class="card-title text-center" style="font-size: 2em;">La liste des Actualités</h1>
    <br>

    <!-- Button to navigate to the "ajouter" form -->
    <div class="text-center mb-3">
        <a href="{{ path('ajouterA') }}" class="btn btn-primary">Ajouter Actualité</a>
    </div>

    <div class="container">
        <!-- Display each actualité in a card format -->
        {% for actualite in pagination %}
            <div class="card mb-3">
                <div class="row no-gutters">
                    <!-- Optional image display -->
                    {% if actualite.getImageA() %}
                        <div class="col-md-4">
                            <img src="{{ asset('uploads/' ~ actualite.getImageA()) }}" class="img-thumbnail" alt="Actualité Image">
                        </div>
                    {% endif %}

                    <div class="col-md-8">
                        <div class="card-body">
                            <h4 class="card-title">{{ actualite.getTitreA() }}</h4>
                            <p class="card-text">{{ actualite.getDescriptionA() }}</p>
                            <p class="card-text"><small class="text-muted">Date: {{ actualite.getDateA()|date('Y-m-d') }}</small></p>

                            <!-- Buttons for details, modify, and delete -->
                            <a href="{{ path('publicite_show', {'id': actualite.getIdA()}) }}" class="btn btn-sm btn-outline-info">Voir les Publicités</a>
                            <a href="{{ path('modifierA', {'id': actualite.getIdA()}) }}" class="btn btn-sm btn-outline-primary">Modifier</a>
                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteActualite('{{ actualite.getIdA() }}')">Supprimer</button>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

 <!-- Pagination -->
<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item {% if pagination.currentPageNumber == 1 %}disabled{% endif %}">
            <a class="page-link" href="{{ path('actualite_show', {'page': 1}) }}" aria-label="Previous">
                <span aria-hidden="true">«</span>
            </a>
        </li>
        {% for page in 1..pagination.pageCount %}
            <li class="page-item {% if page == pagination.currentPageNumber %}active{% endif %}">
