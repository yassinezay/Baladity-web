<script>
    function deleteActualite(actualiteId) {
        // Confirm deletion with the user
        if (confirm("Are you sure you want to delete this actualite?")) {
            // Make AJAX request to delete actualite
            fetch(`/actualite/deleteA/${actualiteId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                    // You might need to add CSRF token here if your Symfony application uses CSRF protection
                },
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                // Redirect to actualite_show route after successful deletion
                window.location.href = '{{ path('actualite_show') }}';
            })
            .catch(error => {
                console.error('There was a problem with the fetch operation:', error);
            });
        }
    }
</script>






            

