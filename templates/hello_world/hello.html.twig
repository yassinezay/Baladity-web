{# templates/hello_world/hello.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hello World</title>
    
</head>
<body>

    <h1 id="hello-heading">Hello World</h1>
    <p>Welcome to the Hello World page!</p>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intro.js/4.1.0/introjs.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intro.js/4.1.0/intro.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Intro.js
            var intro = introJs();
            intro.setOptions({
                steps: [
                    {
                        intro: "Welcome! This is a tutorial for the Hello World page."
                    },
                    {
                        element: '#hello-heading',
                        intro: "This is the 'Hello World' heading."
                    }
                ]
            });
            intro.start();
        });
    </script>
    
</body>
</html>
